extends layout

block css
  link(rel='stylesheet', href="/node_modules/coralui/build/css/coral.min.css")
  link(rel='stylesheet', href="#{url('style.less')}")

block js
  script(src="/node_modules/coralui/build/js/libs/moment.js")
  script(src="/node_modules/coralui/build/js/coral.min.js")
  script(src="#{url('app.coffee')}")

block molecules
    script(src="/molecules/coral-weather")

block content
  .coral-Well
    h1 Coral styling elements
    label.coral-Checkbox
      input.coral-Checkbox-input(type="checkbox", name="check", checked)
      span.coral-Checkbox-checkmark
      span.coral-Checkbox-description Checkbox
    .coral-Button Default Button

  #via-script.coral-Well
    h1 Placing Coral styling elements via script
    h3.replace Something went wrong. This text should have been replaced by script generated button.
    
  .coral-Well
    h1 Coral Components
    coral-accordion
      coral-accordion-item
        coral-accordion-item-label Panel 1
        coral-accordion-item-content Panel 1 content
      coral-accordion-item
        coral-accordion-item-label Panel 2
        coral-accordion-item-content Panel 2 content

  .coral-Well
    h1 Custom Coral Components
    coral-weather